<!doctype html>
<html lang="en">

<head>
  <%- include('./partials/head'); -%>
    <title>Search Results</title>
</head>

<body>
  <%- include('./partials/header'); -%>
    <div class="container-fluid">
      <% if (products) { %>
        <!-- <h2>This is all products for <%= term %></h2> -->
        <!-- <pre><%= products %></pre> -->

        <div class="content row">
          <% products.forEach(function(product) { %>
            <div class="col-sm-3">
              <div class="card w-75">
                <img src="http://<%= product.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= product.brand %></h5>
                  <p class="card-text"><%= product.description %></p>
                  <p>Descuento: <%= product.descuento %></p>
                </div>
              </div>
            </div>
          <% }); %>
        </div>

        <% } else { %>
          <h2>There is no results for <%= term %>
          </h2>
          <% } %>
    </div>
    <%- include('./partials/boostrap'); -%>
</body>
<footer>
  <%- include('./partials/footer'); -%>
</footer>

</html>